    /* ... all your CSS from before ... */
    .container {
      max-width: 960px;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    h2 {
      font-weight: 700;
      color: #333;
      margin-bottom: 2rem;
    }

    /* Floating Add Button Styling */
    #addRecordBtn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      width: 56px;
      height: 56px;
      font-size: 36px;
      font-weight: bold;
      line-height: 1;
      border-radius: 50%;
      background-color: #0d6efd;
      /* Bootstrap primary */
      color: white;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease;
      z-index: 1050;
    }

    #addRecordBtn:hover {
      background-color: #0b5ed7;
    }

    /* Cards */
    .card {
      border-radius: 12px;
      box-shadow: 0 4px 12px rgb(250 218 221 / 0.35);
      border: none;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
      cursor: default;
      overflow: hidden;
    }

    .card:hover {
      box-shadow: 0 6px 25px rgb(250 218 221 / 0.75);
      transform: translateY(-6px);
    }

    .card .card-body {
      padding: 1.25rem 1.5rem;
      color: #4a4a4a;
    }

    .card .card-title {
      font-weight: 700;
      font-size: 1.3rem;
      color: #5c3d5c;
    }

    .badge-warning {
      background-color: #f8c6d4;
      color: #7a304e;
    }

    .badge-secondary {
      background-color: #e1d1d8;
      color: #7a304e;
    }

    /* Image inside card */
    .card img.record-img {
      max-height: 180px;
      object-fit: contain;
      border-radius: 8px;
      margin-top: 1rem;
      border: 2px solid #d6336c;
      width: 100%;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .card img.record-img:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgb(214 51 108 / 0.7);
    }

    .card-footer {
      background: transparent;
      border-top: none;
      padding: 0.75rem 1.5rem;
      display: flex;
      justify-content: flex-end;
      gap: 0.5rem;
    }

    .card-footer .btn {
      border-radius: 6px;
      font-weight: 600;
      padding: 0.375rem 1rem;
      transition: all 0.3s ease;
      min-width: 70px;
    }

    .card-footer .btn-outline-primary {
      border-color: #d6336c;
      color: #d6336c;
    }

    .card-footer .btn-outline-primary:hover {
      background-color: #d6336c;
      color: #fff;
    }

    .card-footer .btn-outline-danger {
      border-color: #b02a37;
      color: #b02a37;
    }

    .card-footer .btn-outline-danger:hover {
      background-color: #b02a37;
      color: #fff;
    }

    /* Next Appointment Alert */
    .next-appointment-alert {
      background-color: #FADADD;
      border-radius: 8px;
      padding: 1rem 1.5rem;
      box-shadow: 0 4px 10px rgb(250 218 221 / 0.4);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      font-weight: 600;
      color: #4a4a4a;
    }

    /* Validation feedback */
    .invalid-feedback {
      font-size: 0.9rem;
      color: #b02a37;
    }

    /* Modal image */
    #imageModal .modal-dialog {
      max-width: 90vw;
    }

    #imageModal img {
      width: 100%;
      height: auto;
      border-radius: 12px;
    }
      .add-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background-color: #eecff3;
      color: #000;
      font-weight: bold;
      border: none;
      border-radius: 50%;
      padding: 15px 20px;
      font-size: 24px;
    }

  </style>
</head>

<body>
  <div class="overlay">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a href="/" class="btn btn-outline-primary">Home</a>
        <div class="d-flex align-items-center">
          <span class="me-3 fw-bold">ðŸ‘¤ <%= userName  %></span>
          <button class="btn btn-outline-danger" onclick="window.location.href='/logout'">Logout</button>
        </div>
      </div>
    </nav>
  <div class="container">
    <h2 class="text-center">ðŸ“‹ Medical Records & Appointments</h2>

  <% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show mt-3 mx-3" role="alert">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3 mx-3" role="alert">
    <%= error[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>


            <!-- Helper function for time formatting -->
            <% function formatTime12h(time24) { if (!time24) return '' ; let [hours, minutes]=time24.split(':');
              hours=parseInt(hours); const ampm=hours>= 12 ? 'PM' : 'AM';
              hours = hours % 12 || 12;
              return `${hours}:${minutes} ${ampm}`;
              }
              %>

              <!-- Next Appointment Reminder -->
              <% if (nextAppointment) { %>
                <div class="next-appointment-alert">
                  <div>
                    <strong>ðŸ“… Next Appointment:</strong><br />
                    Dr. <%= nextAppointment.doctor %> â€” <%= new Date(nextAppointment.date).toDateString() %> at <%=
                          formatTime12h(nextAppointment.time) %>
                  </div>
                  <a href="#record-<%= nextAppointment._id %>" id="viewNextBtn" class="btn btn-outline-primary">View</a>
                </div>
                <% } %>

                  <!-- Records Display -->
                  <div class="row">
                    <% if (!records || records.length===0) { %>
                      <div class="text-center text-muted">
                        No records yet. Click the "+" button below to add one.
                      </div>
                      <% } else { %>
                        <% for (let i=0; i < records.length; i++) { let record=records[i]; let now=new Date(); let
                          recDate=new Date(record.date); let isUpcoming=recDate>= now;

                          let imageSrc = null;
                          if (record.prescriptionImage) {
                          if (record.prescriptionImage.startsWith('data:image')) {
                          imageSrc = record.prescriptionImage;
                          } else {
                          imageSrc = `data:image/jpeg;base64,${record.prescriptionImage}`;
                          }
                          }
                          %>

                          <div class="col-md-6 mb-4" id="record-<%= record._id %>">
                            <div class="card">
                              <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                  <h5 class="card-title">
                                    <%= record.doctor %>
                                  </h5>
                                  <% if (isUpcoming) { %>
                                    <span class="badge badge-warning">Upcoming</span>
                                    <% } else { %>
                                      <span class="badge badge-secondary">Past</span>
                                      <% } %>
                                </div>

                                <p class="mb-1"><strong>Date:</strong>
                                  <%= new Date(record.date).toDateString() %>
                                </p>
                                <p class="mb-1"><strong>Time:</strong>
                                  <%= formatTime12h(record.time) %>
                                </p>

                                <% if (record.purpose) { %>
                                  <p><strong>Notes:</strong>
                                    <%= record.purpose %>
                                  </p>
                                  <% } %>

                                    <% if (imageSrc) { %>
                                      <img src="<%= imageSrc %>" alt="Prescription Image" class="record-img rounded"
                                        style="max-height: 200px; cursor: pointer;" data-bs-toggle="modal"
                                        data-bs-target="#imageModal<%= record._id %>"
                                        title="Click to view full image" />

                                      
                                      <% } %>
                                      <div class="card-footer d-flex justify-content-end gap-2">
                                              <button class="btn btn-outline-primary btn-sm edit-btn"
                                                data-id="<%= record._id %>" data-doctor="<%= record.doctor %>"
                                                data-date="<%= new Date(record.date).toISOString().slice(0,10) %>"
                                                data-time="<%= record.time %>"
                                                data-purpose="<%= record.purpose ? record.purpose.replaceAll('"', '&quot;') : '' %>"
                                                data-imagebase64="<%= record.prescriptionImage || '' %>">
                                                  Edit
                                              </button>

                                              <form action="/records/delete/<%= record._id %>" method="POST"
                                                onsubmit="return confirm('Are you sure you want to delete this record?');"
                                                class="mb-0">
                                                <button type="submit"
                                                  class="btn btn-outline-danger btn-sm">Delete</button>
                                              </form>
                                            </div>
                              </div>
                            </div>
                          </div>
<div class="modal fade" id="imageModal<%= record._id %>" tabindex="-1"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                          <div class="modal-content bg-dark">
                                            <div class="modal-body p-0">
                                              <img src="<%= imageSrc %>" alt="Full Prescription"
                                                class="img-fluid w-100" />
                                            </div>
                                            <div class="modal-footer justify-content-center border-0">
                                              <button type="button" class="btn btn-light"
                                                data-bs-dismiss="modal">Close</button>
                                            </div>
                                            
                                          </div>
                                        </div>
                                      </div>
                          <% } %> <!-- End of loop -->
                            <% } %>
                  </div>



                  <!-- Floating Add Button -->
                 
                   <button class="add-btn" data-bs-toggle="modal" data-bs-target="#addRecordModal" title="Add Records">âž•</button>

                  <!-- Add Record Modal -->
                  <div class="modal fade" id="addRecordModal" tabindex="-1" aria-labelledby="addRecordModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content rounded-4 shadow">
                        <div class="modal-header">
                          <h5 class="modal-title" id="addRecordModalLabel">Add Medical Record</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/records/add" method="POST" enctype="multipart/form-data" novalidate>
                          <div class="modal-body">
                            <div class="mb-3">
                              <label for="doctor" class="form-label">Doctor's Name</label>
                              <input type="text" class="form-control" id="doctor" name="doctor" required
                                placeholder="Dr. Smith" />
                              <div class="invalid-feedback">Please enter the doctor's name.</div>
                            </div>

                            <div class="mb-3">
                              <label for="date" class="form-label">Date</label>
                              <input type="date" class="form-control" id="date" name="date" required />
                              <div class="invalid-feedback">Please select a date.</div>
                            </div>

                            <div class="mb-3">
                              <label for="time" class="form-label">Time</label>
                              <div class="d-flex gap-2">
                                <input type="number" id="timeHour" name="timeHour" class="form-control" min="1" max="12"
                                  placeholder="Hour" required style="max-width: 80px;" />
                                <input type="number" id="timeMinute" name="timeMinute" class="form-control" min="0"
                                  max="59" placeholder="Minute" required style="max-width: 80px;" />
                                <select id="timeAmPm" name="timeAmPm" class="form-select" required
                                  style="max-width: 90px;">
                                  <option value="AM">AM</option>
                                  <option value="PM">PM</option>
                                </select>
                              </div>
                              <div class="invalid-feedback">Please select a time.</div>
                            </div>

                            <div class="mb-3">
                              <label for="purpose" class="form-label">Notes / Purpose</label>
                              <textarea class="form-control" id="purpose" name="purpose" rows="3"
                                placeholder="Optional notes about this appointment"></textarea>
                            </div>

                            <div class="mb-3">
                              <label for="image" class="form-label">Prescription Image</label>
                              <input class="form-control" type="file" id="image" name="image" accept="image/*"
                                capture="environment" />
                              <div class="form-text">Upload or take a photo (mobile only)(Limit-100kb).</div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                              Close
                            </button>
                            <button type="submit" class="btn btn-primary">Add Record</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>

                  <!-- Edit Record Modal -->
                  <div class="modal fade" id="editRecordModal" tabindex="-1" aria-labelledby="editRecordModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content rounded-4 shadow">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editRecordModalLabel">Edit Medical Record</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="editRecordForm" method="POST" enctype="multipart/form-data" novalidate>
                          <div class="modal-body">
                            <input type="hidden" id="editRecordId" name="id" />
                            <div class="mb-3">
                              <label for="editDoctor" class="form-label">Doctor's Name</label>
                              <input type="text" class="form-control" id="editDoctor" name="doctor" required />
                              <div class="invalid-feedback">Please enter the doctor's name.</div>
                            </div>

                            <div class="mb-3">
                              <label for="editDate" class="form-label">Date</label>
                              <input type="date" class="form-control" id="editDate" name="date" required />
                              <div class="invalid-feedback">Please select a date.</div>
                            </div>

                            <div class="mb-3">
                              <label for="editTime" class="form-label">Time</label>
                              <input type="time" class="form-control" id="editTime" name="time" required />
                              <div class="invalid-feedback">Please select a time.</div>
                            </div>

                            <div class="mb-3">
                              <label for="editPurpose" class="form-label">Notes / Purpose</label>
                              <textarea class="form-control" id="editPurpose" name="purpose" rows="3"></textarea>
                            </div>

                            <div class="mb-3">
                              <label for="editImage" class="form-label">Prescription Image</label>
                              <input class="form-control" type="file" id="editImage" name="image" accept="image/*"
                                capture="environment" />
                              <div class="form-text">Upload or take a photo (mobile only). Leave blank to keep
                                existing image.</div>
                              <img id="currentImagePreview" src="" alt="Current Prescription Image"
                                class="img-fluid mt-2" style="max-height: 200px;" />
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                              Close
                            </button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>






                  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                  <script>


                    // Edit button click handler to open modal and fill data
                    document.addEventListener('DOMContentLoaded', () => {
                      const editButtons = document.querySelectorAll('.edit-btn');
                      const editModal = new bootstrap.Modal(document.getElementById('editRecordModal'));
                      const editForm = document.getElementById('editRecordForm');

                      editButtons.forEach(button => {
                        button.addEventListener('click', () => {
                          const id = button.dataset.id;
                          const doctor = button.dataset.doctor;
                          const date = button.dataset.date;
                          const time = button.dataset.time;
                          const purpose = button.dataset.purpose;
                          const imagebase64 = button.dataset.imagebase64;

                          document.getElementById('editRecordId').value = id;
                          document.getElementById('editDoctor').value = doctor;
                          document.getElementById('editDate').value = date;
                          document.getElementById('editTime').value = time;
                          document.getElementById('editPurpose').value = purpose;

                          if (imagebase64) {
                            // Show current image preview with data URI prefix
                            let src = imagebase64.startsWith('data:image') ? imagebase64 : `data:image/jpeg;base64,${imagebase64}`;
                            document.getElementById('currentImagePreview').src = src;
                            document.getElementById('currentImagePreview').style.display = 'block';
                          } else {
                            document.getElementById('currentImagePreview').src = '';
                            document.getElementById('currentImagePreview').style.display = 'none';
                          }

                          // Set form action dynamically (adjust path as per your backend route)
                          editForm.action = `/records/edit/${id}`;

                          editModal.show();
                        });
                      });
                    });

                    // Bootstrap form validation
                    (() => {
                      'use strict';

                      const forms = document.querySelectorAll('.needs-validation');
                      Array.from(forms).forEach(form => {
                        form.addEventListener(
                          'submit',
                          event => {
                            if (!form.checkValidity()) {
                              event.preventDefault();
                              event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                          },
                          false
                        );
                      });
                    })();
                  </script>
</body>

</html>
